<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"

    tools:context=".QuizQuestionsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"

        android:gravity="center">

        <TextView
            android:id="@+id/tv_question"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="What is this animal?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/ho" />

        <TextView
            android:id="@+id/tvOption_1"
            android:layout_margin="10dp"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="18sp"
            android:text="Ho"
            android:background="@drawable/custom_tv"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvOption_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/custom_tv"
            android:gravity="center"
            android:padding="10dp"
            android:text="Cho"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvOption_3"
            android:layout_margin="10dp"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="20sp"
            android:text="Meo"
            android:background="@drawable/custom_tv"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvOption_4"
            android:layout_margin="10dp"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="20sp"
            android:text="Chim"
            android:background="@drawable/custom_tv"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_Submit"
            android:layout_margin="10dp"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="20sp"
            android:text="SUBMIT"
            android:textStyle="bold"
            android:background="@drawable/custom_button_start"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</ScrollView>